{{- /* sitemap-all.xml â†’ Catch-All Sitemap (All Sections + All Folders) */ -}}
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <url>
    <loc>{{ .Site.BaseURL | safeURL }}</loc>
    <lastmod>{{ now.UTC.Format "2006-01-02T15:04:05Z" }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>1.0</priority>
  </url>

  {{- range .Site.RegularPages }}
  <url>
    <loc>{{ .Permalink }}</loc>
    <lastmod>{{ (or .Lastmod .Date).Format "2006-01-02T15:04:05Z07:00" }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>0.6</priority>
  </url>
  {{- end }}

</urlset>
